{
  "layer": "top",
  "position": "top",
  "spacing": 4,
  "modules-left": [
    "niri/workspaces",
    "niri/window"
  ],
  "modules-right": [
    "idle_inhibitor",
    "disk",
    "network",
    "cpu",
    "memory", 
    "temperature",
    "pulseaudio",
    "tray",
    "custom/powermenu",
  ],
  "modules-center": [
    "clock"
  ],
  "clock": {
    "format": "󰃰 {:%H:%M}",
    "tooltip-format": "{:%A, %d %B %Y}",
  },
  "niri/window": {
    "format": "{title}",
    "max-length": 50,
    "tooltip": true,
    "separate-outputs": true,
    "rewrite": {
      "(.*) — Mozilla Firefox": " $1",
      "(.*) - Visual Studio Code": " $1",
      "(.*) - Code - OSS": " $1",
      "ghostty": "",
      "nvim (.*)": " $1"
    }
  },
  "cpu": {
    "interval": 5,
    "format": "󰻠 {usage}%",
    "tooltip": true,
    "tooltip-format": "Usage: {usage}%\nLoad: {load}",
    "on-click": "ghostty -e htop",
    "states": {
      "warning": 70,
      "critical": 90
    }
  },
  "memory": {
    "interval": 5,
    "format": "󰍛 {percentage}% ({used:.1f}G)",
    "tooltip": true,
    "tooltip-format": "Used: {used:.1f}G / {total:.1f}G ({percentage}%)\nAvailable: {avail:.1f}G",
    "on-click": "ghostty -e htop",
    "states": {
      "warning": 70,
      "critical": 90
    }
  },
  "temperature": {
    "hwmon-path-abs": "/sys/devices/platform/coretemp.0/hwmon/hwmon*/temp1_input",
    "input-filename": "temp1_input",
    "critical-threshold": 80,
    "format": "󰔏 {temperatureC}°C",
    "format-critical": "󰸁 {temperatureC}°C",
    "tooltip": true,
    "tooltip-format": "CPU Temperature: {temperatureC}°C",
    "states": {
      "warning": 70,
      "critical": 80
    }
  },
  "disk": {
    "interval": 30,
    "format": "󰋊 {percentage_used}% ({free} free)",
    "path": "/home",
    "tooltip": true,
    "tooltip-format": "{used} used out of {total} total ({percentage_used}% used)\nPath: {path}",
    "on-click": "ghostty -e ncdu /home",
    "states": {
      "warning": 70,
      "critical": 90
    }
  },
  "network": {
    "interval": 5,
    "format-wifi": "󰤨 {signalStrength}%",
    "format-ethernet": "󰈀 {bandwidthDownBytes}",
    "format-disconnected": "󰤮 Disconnected",
    "tooltip": true,
    "tooltip-format-wifi": "SSID: {essid}\nSignal: {signalStrength}% ({signaldBm} dBm)\nFrequency: {frequency}GHz\nIP: {ipaddr}",
    "tooltip-format-ethernet": "Interface: {ifname}\nIP: {ipaddr}\nGateway: {gwaddr}\nDown: {bandwidthDownBytes} Up: {bandwidthUpBytes}",
    "tooltip-format-disconnected": "No network connection",
    "on-click-right": "nm-connection-editor",
  },
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-muted": "󰝟 muted",
    "format-icons": {
      "default": [
        "󰕿",
        "󰖀",
        "󰕾"
      ],
    },
    "on-click": "pavucontrol",
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "󰒳",
      "deactivated": "󰒲"
    },
    "tooltip": true,
    "tooltip-format-activated": "Coffee mode ON",
    "tooltip-format-deactivated": "Coffee mode OFF"
  },
  "custom/powermenu": {
    "format": "󰐥",
    "tooltip": "Power Menu",
    "on-click": "wlogout",
  },
  "niri/workspaces": {
    "current-only": false,
    "format": "{name}",
    "format-window-separator": " ",
    "window-rewrite-default": "",
    "window-rewrite": {
      "firefox": "",
      "ghostty": "",
      "code": "",
      "nvim": ""
    }
  },
  "tray": {
    "icon-size": 16,
    "spacing": 8,
    "tooltip": true,
    "show-passive-items": true,
    "reverse-direction": false,
  },
}
